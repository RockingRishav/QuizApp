<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pexels_andre_moura_6105553"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ResultFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Result"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ResultImage"
        android:layout_width="262dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Congrats"
        tools:src="@drawable/ic_trophy" />
    <TextView
        android:id="@+id/ResultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Hey Congratulations!"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Rishav"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/Score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Your Score is 8 out of 10"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#4A4A4A"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/finalFinsh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        android:text="Finish"
        android:textSize="18sp"
        android:textColor="#0F98D6"/>


</LinearLayout>